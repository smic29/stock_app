<%= turbo_frame_tag "modal_frame" do %>
<div data-controller="meme">
    <select name="" id="meme_select" class="form-select mb-3" data-meme-target="memeSelect" data-action="change->meme#updateMemeImage">
    <option selected>Choose a meme</option>
    <% memegen_templates.templates.each do |template| %>
        <option value="<%= template['id'] %>"><%= template['name'] %></option>
    <% end %>
    </select>
    <div class="text-center d-none" data-meme-target="memeLoader">
        <div class="spinner-grow spinner-grow-sm" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <img src="" class="img-fluid" data-meme-target="memeImage">
</div>
<% end %>