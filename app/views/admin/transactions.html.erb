<%= turbo_frame_tag "admin_dash" do %>
    <div class="container-fluid mb-5">
        <div class="row bgc-gray-blue p-2 mb-3 rounded-bottom-5 text-center shadow-sm-sunset sticky-top" data-controller="animations">
            <h3 class="font-mont txtc-air txt-shadow fw-bold">App Transactions</h3>
        </div>

        <div class="row bgc-gray-blue p-2 rounded-3 pb-5 font-robo">
            <% @transactions.each do |transaction| %>
            <div class="card bgc-air mb-3 shadow-sm-sunset">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="d-flex flex-column">
                        <span class="fw-bold"><%= transaction.user.email %></span>
                        <small class="text-muted"><%= transaction.created_at.strftime("%B %d, %Y %I:%M %p") %></small>
                    </div>
                    <div class="rounded-circle bgc-dark-blue p-2 opacity-25 position-absolute top-50 start-50 translate-middle">
                        <%= render_icon(transaction) %>
                    </div>
                    <div class="d-flex flex-column align-items-end">
                        <span class="fw-bold"><%= bought_or_sold_number(transaction) %></span>
                        <span class="text-muted"><%= transaction.stock.symbol %></span>
                        <span class="fw-bold font-monospace"><%= number_to_currency(transaction.price) %></span>
                    </div>
                </div>
            </div>
            
            <% end %>
        </div>
    </div>
<% end %>