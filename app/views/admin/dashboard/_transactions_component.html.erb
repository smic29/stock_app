<div class="row mt-3 gx-2">
    <div class="col-12 mx-auto border rounded p-2 d-flex flex-column shadow shadow-dark-blue">
        <h6 class="border-bottom border-2 mb-2">Recent Transactions</h6>
    <% @transactions.each do |transaction| %>
        <div class="d-flex justify-content-between align-items-center mb-2 px-2 position-relative rounded-3 shadow-sm shadow-sm-earth">
            <div class="d-flex align-items-center gap-3">
                <%= render_icon transaction %>
                <div class="d-flex flex-column">
                    <small class="text-body-secondary"><%= transaction.user.email %></small>
                    <span><%= transaction.stock.symbol %></span>
                </div>
            </div>
            <div class="font-monospace">
                <%= is_buy?(transaction) ? '-' : '+' %>$<%= transaction.price %>
            </div>
            <small class="smallest-boi position-absolute bottom-0 end-0 text-nowrap me-2">
                <%= time_ago_in_words(transaction.created_at) + ' ago' %>
            </small>
        </div>
    <% end %>
        <div class="text-center">
            <%= link_to 'See more transactions', admin_transactions_path, class: 'btn btn-sm btn-outline-secondary' %>
        </div>
    </div>
</div>