<%= turbo_frame_tag "admin_dash" do %>
    <div class="container-fluid">
        <div class="row bgc-gray-blue rounded-bottom-5 shadow py-3 text-center">
            <span class="txtc-air display-6 bgc-dark-blue rounded-bottom-5 py-2 fw-semibold mb-2 border border-dark-subtle border-opacity-10 border-2 border-top-0">StockApp Admin</span>
            <div class="mx-auto col-9 border rounded p-2 text-center bgc-air">
                <div class="position-relative">
                    <span id="total_users" class="position-absolute top-50 start-50 translate-middle display-4 font-monospace user-select-none"></span>
                    <canvas id="admin_users_chart" style="max-width:300px; max-height:200px"  data-controller="admin-users-chart"></canvas>
                </div>
            </div>
        </div>
        <div class="row mt-3 gx-2">
            <div class="col-12 mx-auto border rounded p-2 d-flex flex-column shadow">
                <h6 class="border-bottom border-2 mb-2">Recent Transactions</h6>
            <% @transactions.each do |transaction| %>
                <div class="d-flex justify-content-between align-items-center mb-1 px-2">
                    <div class="d-flex align-items-center gap-3">
                        <%= render_icon transaction %>
                        <div class="d-flex flex-column">
                            <small class="text-body-secondary"><%= transaction.user.email %></small>
                            <span><%= transaction.stock.symbol %></span>
                        </div>
                    </div>
                    <div>
                        <%= is_buy?(transaction) ? '+' : '-' %>$<%= transaction.price %>
                    </div>
                </div>
            <% end %>
                <div class="text-center">
                    <%= link_to 'See more transactions', admin_transactions_path, class: 'btn btn-sm btn-outline-secondary' %>
                </div>
            </div>
        </div>
    </div>
<% end %>