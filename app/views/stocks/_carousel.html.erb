<%# keeping this for future usage %>
<div id="carouselExampleCaptions" class="carousel slide">
  <div class="carousel-indicators">
    <% stocks.count.times do |index| %>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= index %>" <% if index.zero?%>class="active"<% end %>></button>
    <% end %>
  </div>
  <div class="carousel-inner">
    <% stocks.each do |stock| %>
        <div class="carousel-item p-5 <%= stock == stocks.first ? 'active' : ''%>">
            <div class="card-deck">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= stock.symbol %></h5>
                        <p class="card-text">Shares: <%= stock.quantity %></p>
                        <p class="card-text">Average Buy Price: $ <%= average_buy_price(stock) %></p>
                        <p class="card-text">Previous Close: $ <%= previous_close_price(stock.symbol, cached_data) %></p>
                        <p class="card-text">Portfolio Value: $ <%= total_value(stock) %></p>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>